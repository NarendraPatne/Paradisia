<% layout("/layouts/boilerplate") %>
<body>
        <style>
            #filters{
                display: flex;
                flex-wrap: wrap;
            }
            .filter{
                margin-top: 1.5rem;
                margin-right: 2.5rem;
                opacity: 0.8;
                font-size: 0.8rem;
            }
            .filter:hover{
                opacity: 1;
            }
            .tax-toggle{
                margin-top: 1rem;
                border: 1px solid black;
                border-radius: 1rem;
                height: 3.5rem;
                padding: 1rem;
                margin-left :2rem;
            }
            .tax-info{
                display: none;
            }
          </style>
        <div class="filters" id="filters">
            <div class="filter">
                <div> <i class="fa-solid fa-fire fa-xl"></i></div>
               <p>Trending</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-bed fa-xl"></i></div>
               <p>Rooms</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-mountain-city fa-xl"></i></div>
               <p>Iconic Cities</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-mountain-sun fa-xl"></i></div>
               <p>Mountains</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-place-of-worship fa-xl"></i></div>
               <p>Castles</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-person-swimming fa-xl"></i></div>
               <p>Pools</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-tents fa-xl"></i></div>
               <p>Camping</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-umbrella-beach fa-xl"></i></div>
               <p>Beach</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-snowflake fa-xl"></i></div>
               <p>Arctic</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-ship fa-xl"></i></div>
               <p>Boats</p> 
            </div>
            <div class="filter">
               <div> <i class="fa-solid fa-landmark-dome fa-xl"></i></div>
               <p>Boats</p> 
            </div>
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display Total after Taxes</label>
                  </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(list of allListings){ %>
                <a href="/listings/<%=list._id %>" class="listing-link">
                    <div class="card list-card">
                        <img src="<%=list.image.url %>" class="card-img-top" style="height: 20rem;" alt="...">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <h5 class="card-title"><%=list.title %></h5>
                          <p class="card-text">
                            &#8377 <%=list.price.toLocaleString("en-IN") %>/ Per Night
                            <i class="tax-info">&nbsp;+18% GST</i>
                            </p>
                        </div>
                      </div>
                </a>
                <% } %>
        </div>
        <script>
            let taxSwitch = document.getElementById("flexSwitchCheckDefault");

            taxSwitch.addEventListener("change", () => {
            let taxInfo = document.getElementsByClassName("tax-info");

            for (let ti of taxInfo) {
            ti.style.display = taxSwitch.checked ? "inline" : "none";
            }
            });
            document.querySelector(".search-box").addEventListener("input", function () {
    let searchTerm = this.value.toLowerCase();
    let listings = document.querySelectorAll(".listing-link");

    listings.forEach((listing) => {
        let title = listing.querySelector(".card-title").innerText.toLowerCase();
        listing.style.display = title.includes(searchTerm) ? "block" : "none";
    });
});


        </script>
</body>

