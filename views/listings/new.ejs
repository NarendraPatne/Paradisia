<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
    <h1>Create New Listing</h1>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" id="" placeholder="Add Catchy Title" class="form-control" required>
        <div class="valid-feedback">
            Title Looks Good!
        </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea rows="5" name="listing[description]" id="" placeholder="Enter Description" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Please Enter Description.
            </div>
        </div>
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="url" name="listing[image]" id="" class="form-control" placeholder="Image URL">
        </div> -->
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listing[image]" id="" class="form-control" >
        </div>
        <br>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label for="price" class="form-label">Price</label>
                <input required type="text" name="listing[price]" id="" placeholder="Enter Price" class="form-control">
                <div class="invalid-feedback">
                    Please Enter Price.
                </div>
            </div>
            <div class="col-md-8 mb-3">
                <label for="country" class="form-label">Country</label>
                <input required type="text" name="listing[country]" id="" placeholder="India" class="form-control">
                <div class="invalid-feedback">
                    Please Enter Country.
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input required type="text" name="listing[location]" id="" placeholder="Enter Location" class="form-control">
            <div class="invalid-feedback">
                Please Enter Location.
            </div>
        </div>
        <button class="mt-3 add-btn mb-3 btn btn-dark">Create Listing</button>
    </form>
</div>
</div>
</body>